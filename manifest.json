{
    "manifest_version": 3,
    "name": "Apprendre",
    "description": "An extension that helps your learning Fra√ßais facile",
    "version": "1.1",
    "action": {
      "default_icon": "icons/hello_extensions.png"
    },
    "content_scripts": [
        {
          "js": ["scripts/content.js", "scripts/tts.js"],
          "matches": [
            "*://*/*"
          ],
          "css": ["css/tooltip.css"]
        }
      ],
      "background": {
        "service_worker": "scripts/background.js"
      },
      "permissions": ["activeTab", "tabs", "scripting", "tts"]
  }